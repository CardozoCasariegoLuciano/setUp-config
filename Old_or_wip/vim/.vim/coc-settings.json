{

  //Javascript/Typescript
  "typescript.referencesCodeLens.enable": true,
  "javascript.referencesCodeLens.enable": true,
  "javascript.suggestionActions.enabled": false,
  "javascript.suggest.autoImports": true, 
  "typescript.suggest.autoImports": true,
  "diagnostic.displayByAle": true,
  "emmet.showExpandedAbbreviation": "always",
  "emmet.syntaxProfiles": {"php":"html", "blade":"html"},
  "emmet.includeLanguages": { "javascript": "javascriptreact", "typescript": "typescriptreact", "php": "html", "blade": "html" },
  "tsserver.trace.server": "verbose",


  //Python
  "python.formatting.provider": "black",
  //"coc.preferences.formatOnSaveFiletypes": ["python3", "python"],
  "coc.preferences.formatOnType": true,
  "python.formatting.blackPath": "~/.local/bin/black",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportMissingImports": "none"
  },

  //PHP
  "intelephense.diagnostics.undefinedTypes": false,
  "intelephense.diagnostics.undefinedFunctions": false,
  "intelephense.diagnostics.undefinedConstants": false,
  "intelephense.diagnostics.undefinedClassConstants": false,
  "intelephense.diagnostics.undefinedMethods": false,
  "intelephense.diagnostics.undefinedProperties": false,
  "intelephense.diagnostics.undefinedVariables": false,

  //Java
  "java.format.enabled": true,
  "java.format.onType.enabled": true,
  "java.format.settings.url": "/home/luciano/.config/coc/extensions/node_modules/redhat.java/eclipse-formatter.xml",
  "coc.preferences.formatOnSaveFiletypes": [
    "java"
  ]
}
